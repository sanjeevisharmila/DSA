class Solution {
    public ListNode removeElements(ListNode head, int val) {
        ListNode dummy=new ListNode(0);
        ListNode tail=dummy;
        while(head!=null){
            if(head.val!=val){
                tail.next=head;
                tail=tail.next;
            }
            head=head.next;
        }
        tail.next=null;
        return dummy.next;
    }
}

time=O(n)
space=O(1)

class Solution {
    public ListNode removeElements(ListNode head, int val) {
        if(head==null)
        return null;
        head.next=removeElements(head.next,val);
        if(head.val==val)
        return head.next;
        else
        return head;
    }
}

time=O(n)
space=O(n)
